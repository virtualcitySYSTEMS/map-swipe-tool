{
  "name": "@vcmap/swipe-tool",
  "version": "1.0.3",
  "description": "A VC Map plugin to swipe split views.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "prepublishOnly": "vcmplugin build",
    "build": "vcmplugin build",
    "pack": "vcmplugin pack",
    "start": "vcmplugin serve",
    "preview": "vcmplugin preview",
    "buildStagingApp": "vcmplugin buildStagingApp",
    "lint": "eslint \"{src,tests}/**/*.{js,vue}\"",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:gitlab": "vitest run --coverage --reporter junit --outputFile test-report.xml"
  },
  "author": "VCS <support@vc.systems>",
  "license": "MIT",
  "keywords": [
    "vcmap",
    "plugin"
  ],
  "files": [
    "src/",
    "dist/",
    "plugin-assets/",
    "LICENSE.md",
    "README.md"
  ],
  "exports": {
    ".": "./src/index.js",
    "./dist": "./dist/index.js"
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "eslintConfig": {
    "root": true,
    "extends": "@vcsuite/eslint-config/vue",
    "rules": {
      "jsdoc/check-tag-names": "off"
    }
  },
  "dependencies": {
    "@vcsuite/check": "^1.1.2",
    "@vcsuite/logger": "^1.0.1",
    "@vcsuite/parsers": "^1.0.1",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "@vcmap/cesium": "~1.97.1",
    "@vcmap/core": "~5.0.0-rc.25",
    "@vcmap/ui": "^5.0.0-rc.18",
    "@vitest/coverage-c8": "^0.24.5",
    "jest-canvas-mock": "^2.4.0",
    "jsdom": "^20.0.2",
    "vite": "^3.2.2",
    "vitest": "^0.24.5",
    "vue": "~2.7.3",
    "vuetify": "~2.6.7"
  },
  "devDependencies": {
    "@vcmap/plugin-cli": "^2.1.2",
    "@vcsuite/eslint-config": "^2.1.1"
  }
}
